<body>
    <div class="container">
        <div class="tabs">
            <div class="tab active" data-tab="calorie-counter">Calorie Counter</div>
            <div class="tab" data-tab="tdee">TDEE Calculator</div>
            <div class="tab" data-tab="deficit">Calorie Deficit</div>
        </div>

        <!-- Calorie Counter Tab -->
        <div class="tab-content active" id="calorie-counter">
            <form id="calorieForm">
                <div class="meal-group">
                    <label class="meal-label" for="breakfast">Breakfast</label>
                    <input class="meal-input" type="number" id="breakfast" min="0" placeholder="Calories for breakfast">
                </div>
                <div class="meal-group">
                    <label class="meal-label" for="lunch">Lunch</label>
                    <input class="meal-input" type="number" id="lunch" min="0" placeholder="Calories for lunch">
                </div>
                <div class="meal-group">
                    <label class="meal-label" for="dinner">Dinner</label>
                    <input class="meal-input" type="number" id="dinner" min="0" placeholder="Calories for dinner">
                </div>
                <div class="meal-group">
                    <label class="meal-label" for="snacks">Snacks</label>
                    <input class="meal-input" type="number" id="snacks" min="0" placeholder="Calories for snacks">
                </div>
                <button type="button" class="calc-btn" onclick="calculateCalories()">Calculate Total</button>
            </form>
            <div class="result" id="calorieResult" style="display:none;"></div>
        </div>

        <!-- TDEE Calculator Tab -->
        <div class="tab-content" id="tdee">
            <form id="tdeeForm">
                <div class="input-row">
                    <input type="number" id="age" min="10" max="100" placeholder="Age (years)" required>
                    <select id="gender" required>
                        <option value="">Gender</option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                    </select>
                </div>
                <div class="input-row">
                    <input type="number" id="height" min="100" max="250" placeholder="Height (cm)" required>
                    <input type="number" id="weight" min="30" max="250" placeholder="Weight (kg)" required>
                </div>
                <div class="input-row">
                    <select id="activity" required>
                        <option value="">Activity Level</option>
                        <option value="1.2">Sedentary</option>
                        <option value="1.375">Lightly active</option>
                        <option value="1.55">Moderately active</option>
                        <option value="1.725">Very active</option>
                        <option value="1.9">Extra active</option>
                    </select>
                </div>
                <button type="button" class="calc-btn" onclick="calculateTDEE()">Calculate TDEE</button>
            </form>
            <div class="result" id="tdeeResult" style="display:none;"></div>
        </div>

        <!-- Calorie Deficit Calculator Tab -->
        <div class="tab-content" id="deficit">
            <form id="deficitForm">
                <div class="input-row">
                    <input type="number" id="currentWeight" min="30" max="250" placeholder="Current Weight (kg)" required>
                    <input type="number" id="targetWeight" min="30" max="250" placeholder="Target Weight (kg)" required>
                </div>
                <div class="input-row">
                    <input type="number" id="weeks" min="1" max="52" placeholder="Weeks to goal" required>
                </div>
                <div class="input-row">
                    <input type="number" id="tdeeInput" min="800" max="6000" placeholder="Your TDEE (kcal)" required>
                </div>
                <button type="button" class="calc-btn" onclick="calculateDeficit()">Calculate Deficit</button>
            </form>
            <div class="result" id="deficitResult" style="display:none;"></div>
        </div>
    </div>

    <script>
        // Tab switching
        document.querySelectorAll('.tab').forEach(tab => {
            tab.addEventListener('click', function() {
                document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.tab-content').forEach(tc => tc.classList.remove('active'));
                this.classList.add('active');
                document.getElementById(this.dataset.tab).classList.add('active');
            });
        });

        // Calorie Counter
        function calculateCalories() {
            const breakfast = parseInt(document.getElementById('breakfast').value) || 0;
            const lunch = parseInt(document.getElementById('lunch').value) || 0;
            const dinner = parseInt(document.getElementById('dinner').value) || 0;
            const snacks = parseInt(document.getElementById('snacks').value) || 0;
            const total = breakfast + lunch + dinner + snacks;
            const resultDiv = document.getElementById('calorieResult');
            resultDiv.textContent = `Total Calories: ${total} kcal`;
            resultDiv.style.display = 'block';
        }

        // TDEE Calculator
        function calculateTDEE() {
            const age = parseInt(document.getElementById('age').value);
            const gender = document.getElementById('gender').value;
            const height = parseInt(document.getElementById('height').value);
            const weight = parseInt(document.getElementById('weight').value);
            const activity = parseFloat(document.getElementById('activity').value);

            if (!age || !gender || !height || !weight || !activity) return;

            let bmr;
            if (gender === 'male') {
                bmr = 10 * weight + 6.25 * height - 5 * age + 5;
            } else {
                bmr = 10 * weight + 6.25 * height - 5 * age - 161;
            }
            const tdee = Math.round(bmr * activity);
            const resultDiv = document.getElementById('tdeeResult');
            resultDiv.textContent = `Your TDEE is approximately ${tdee} kcal/day`;
            resultDiv.style.display = 'block';
        }

        // Calorie Deficit Calculator
        function calculateDeficit() {
            const currentWeight = parseFloat(document.getElementById('currentWeight').value);
            const targetWeight = parseFloat(document.getElementById('targetWeight').value);
            const weeks = parseInt(document.getElementById('weeks').value);
            const tdee = parseInt(document.getElementById('tdeeInput').value);

            if (!currentWeight || !targetWeight || !weeks || !tdee) return;

            const weightLoss = currentWeight - targetWeight;
            if (weightLoss <= 0) {
                document.getElementById('deficitResult').textContent = "Target weight must be less than current weight.";
                document.getElementById('deficitResult').style.display = 'block';
                return;
            }
            const totalCaloriesToLose = weightLoss * 7700; // 1kg fat â‰ˆ 7700 kcal
            const dailyDeficit = Math.round(totalCaloriesToLose / (weeks * 7));
            const recommendedIntake = tdee - dailyDeficit;

            let msg = `To lose ${weightLoss.toFixed(1)} kg in ${weeks} week(s), aim for a daily deficit of ${dailyDeficit} kcal.`;
            if (recommendedIntake < 1200) {
                msg += " Warning: This is below the recommended minimum intake (1200 kcal/day).";
            } else {
                msg += `\nRecommended daily intake: ${recommendedIntake} kcal.`;
            }
            document.getElementById('deficitResult').textContent = msg;
            document.getElementById('deficitResult').style.display = 'block';
        }
    </script>
</body>
